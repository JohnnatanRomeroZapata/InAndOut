@model IEnumerable<InAndOut.Models.Expense>
@{
    ViewData["Title"] = "Expenses";
}

<div class="container text-center">

    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Expenses List</h1>
        </div>
        <div class="col-6 justify-content-center align-self-center">
            <a class="btn btn-info" asp-controller="Expense" asp-action="Create">Create a new Expense</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <div class="row justify-content-center align-self-center">
            <table class="table table-striped table-bordered col-8">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Expense Name</th>
                        <th class="text-center">Ammount</th>
                        <th class="text-center">Expense Type</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model)
                    {
                    <tr>
                        <td>@expense.ExpenseId</td>
                        <td>@expense.ExpenseName</td>
                        <td>@expense.Ammount</td>
                        <td>@expense.ExpenseType.ExpenseTypeName</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Expense" asp-action="Update" asp-route-id="@expense.ExpenseId">Update</a>
                            <a class="btn btn-danger" asp-controller="Expense" asp-action="Delete" asp-route-expenseId="@expense.ExpenseId">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h1>There is not data</h1>
    }
</div>



@model InAndOut.Models.ViewModels.ExpenseVM

@{
    ViewData["Title"] = "Update Expense";
}

<h4>Update the Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Expense" asp-action="Update">
            <input asp-for="TheExpense.ExpenseId" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TheExpense.ExpenseName" class="control-label"></label>
                <input asp-for="TheExpense.ExpenseName" class="form-control" />
                <span asp-validation-for="TheExpense.ExpenseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheExpense.Ammount" class="control-label"></label>
                <input asp-for="TheExpense.Ammount" class="form-control" />
                <span asp-validation-for="TheExpense.Ammount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TheExpense.ExpenseTypeId" class="control-label"></label>
                <select asp-for="TheExpense.ExpenseTypeId" asp-items="@Model.ddl" class="form-control">
                    <option selected>-- Select Expense Type --</option>
                </select>
                <span asp-validation-for="TheExpense.ExpenseTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Expense" asp-action="IndexExpenses">Back to Expenses List</a>
</div>
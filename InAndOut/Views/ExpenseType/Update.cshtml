@model InAndOut.Models.ExpenseType

@{
    ViewData["Title"] = "Update the Expense Type";
}

<h4>Update the Expense Type</h4>

<hr />

<div class="row">
    <div class="col-4">
        <form method="post" asp-controller="ExpenseType" asp-action="Update">
            <input asp-for="ExpenseTypeId" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseTypeName" class="control-label"></label>
                <input asp-for="ExpenseTypeName" class="form-control" />
                <span asp-validation-for="ExpenseTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="ExpenseType" asp-action="IndexExpenseType">Back to Expenses Types List</a>
</div>
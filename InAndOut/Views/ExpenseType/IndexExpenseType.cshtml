@model IEnumerable<InAndOut.Models.ExpenseType>
@{
    ViewData["Title"] = "Expense Type";
}

<div class="container text-center">

    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Expenses Type List</h1>
        </div>
        <div class="col-6 justify-content-center align-self-center">
            <a class="btn btn-info" asp-controller="ExpenseType" asp-action="Create">Create a new Expense</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <div class="row justify-content-center align-self-center">
            <table class="table table-striped table-bordered col-6">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Expense Type</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expenseType in Model)
                    {
                        <tr>
                            <td>@expenseType.ExpenseTypeId</td>
                            <td>@expenseType.ExpenseTypeName</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="ExpenseType" asp-action="Update" asp-route-expenseTypeId="@expenseType.ExpenseTypeId">Update</a>
                                <a class="btn btn-danger" asp-controller="ExpenseType" asp-action="Delete" asp-route-expenseTypeId="@expenseType.ExpenseTypeId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h1>There is not data</h1>
    }
</div>


@model IEnumerable<InAndOut.Models.Item>
@{
    ViewData["Title"] = "Items";
}

<div class="container text-center">

    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Items List</h1>
        </div>
        <div class="col-6 justify-content-center align-self-center">
            <a class="btn btn-info" asp-controller="Item" asp-action="Create">Create a new Item</a>
        </div>
    </div>

    <hr />

    @if (Model.Count() > 0)
    {
        <div class="row justify-content-center align-self-center">
            <table class="table table-striped table-bordered col-8">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Item Name</th>
                        <th class="text-center">Borrower</th>
                        <th class="text-center">Lender</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ItemId</td>
                            <td>@item.ItemName</td>
                            <td>@item.Borrower</td>
                            <td>@item.Lender</td>
                            <td>
                                <a class="btn btn-warning" asp-controller="Item" asp-action="Update" asp-route-itemId="@item.ItemId">Update</a>
                                <a class="btn btn-danger" asp-controller="Item" asp-action="Delete" asp-route-itemId="@item.ItemId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <h1>There is not data</h1>
    }
</div>



@model InAndOut.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<h3>Are you sure you want to delete this?</h3>

<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Borrower)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Borrower)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lender)
        </dd>
    </dl>

    <form method="post" asp-controller="Item" asp-action="DeletePost">
        <input type="hidden" asp-for="ItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Item" asp-action="IndexItem">Back to Items List</a>
    </form>
</div>
